<?php

	class TiE_Controller
	{
		
		public function __construct() 
		{
			
		}
		
		public function controller(){}
		
		public function loadData()
		{
			if(is_array($_REQUEST)) {
				foreach($_REQUEST as $name => $value) {
					$this->$name = $value;
				}
			}
		}
		
		public function run() 
		{
			$this->controller();
		}
	
	}

?>