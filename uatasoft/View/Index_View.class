<?php
	
	class Index_View extends TiE_View
	{
		
		public function __construct(&$_db)
		{
			//$this->ErrorCreator_Controller = new ErrorCreator_Controller($this);
			$this->db = $_db;
			$this->controller = new Index_Controller($this);
		}
		
		public function __ini()
		{
			GLOBAL $_PW;

			$container = new div("{id: container}");

			#HEADER
			$logo = new img("{ src : ".$_PW['IMAGES']."logo.png }");
			$header = new header();
			$header->append($logo);

			#MENU
			$nav = new nav();
			$nav->append(new text("Home"));
			$nav->append(new text("Empresa"));
			$nav->append(new text("Servios"));
			$nav->append(new text("Clientes"));
			$nav->append(new text("Contato"));

			#CONTENT
			$section = new section();
			$section->append(new text("Contedo"));

			#FOOTER
			$footer = new footer();
			$footer->append(new text("Footer"));

			#APPEND
			$container->append($header);
			$container->append($nav);
			$container->append($section);
			$container->append($footer);

			#GENERATE
			$container->generate();
		}
		
	}
	
?>