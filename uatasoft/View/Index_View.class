			#CRIA O CABEÇALHO
			$header = $this->getHeader();
			#CRIA O MENU
			$nav = $this->getNav();
			#CRIA O CONTEÚDO
			$section = $this->getContent();
			#CRIA O RODAPÉ
			$footer = $this->getFooter();

			#ADICIONA AO CONTAINER
			$container->append($header);
			$container->append($nav);
			$container->append($section);
			//$container->append($footer);

			#GERA O CONTAINER
			$container->generate();
