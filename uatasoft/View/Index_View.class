		 * @version 1.0.0 criada em 19/04/2013 às 10:52
		 * @return  Object Retorna o elemento header do html5.
		 */
		public function getHeader()
		{
			GLOBAL $_PW;
			$logo = new img("{ src : ".$_PW['IMAGES']."logo.png }");
			$header = new header();
			$div = new div("{class: container}");
			$div->append($logo);
